{
    "env": {
        "node": true,
        "es2022": true
    },
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "indent": [
            "warn",
            2
        ],
        "no-trailing-spaces": "warn",
        "eol-last": "warn"
    },
    "ignorePatterns": [
        "node_modules/"
    ]
}